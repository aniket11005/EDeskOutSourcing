@model IEnumerable<ProjectTaskQuery>
@{
    Layout = "~/Areas/FreelancerArea/Views/Shared/_Layout.cshtml";
}
<h1>Index Details</h1>
<a asp-action="Create" asp-controller="ProjectTaskQuery" asp-area="FreelancerArea" class="btn btn-success">Query</a>
<div style="width:1036px;margin-left:50px;margin-right:50px;display:flex">
    <a asp-action="Solved" class="btn btn-success" asp-controller="ProjectTaskQuery" asp-area="FreelancerArea" style="width:600px">Solved</a>
    <a asp-action="NotSolved" class="btn btn-danger" asp-controller="ProjectTaskQuery" asp-area="FreelancerArea" style="width:600px">Not Solved</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Query Title</td>
            <td>Query Description </td>
            <td>IsSolved</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var temp in Model)
        {
            <tr>
                <td>@temp.QueryTitle</td>
                <td>
                    @temp.QueryDescription
                </td>
                <td>
                    @temp.IsSolved
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="ProjectTaskQuery" asp-area="FreelancerArea" asp-route-id="@temp.ProjectTaskQueryID" class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-controller="ProjectTaskQuery" asp-area="FreelancerArea" asp-route-id="@temp.ProjectTaskQueryID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>