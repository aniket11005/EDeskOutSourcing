@model EDeskOutSourcing.Models.Education

@*@{
    Layout = null;
}*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Education</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="EducationID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="EducationName" class="control-label"></label>
                <input asp-for="EducationName" class="form-control" />
                <span asp-validation-for="EducationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EducationType" class="control-label"></label>
               <select asp-for="EducationType" class="form-control">
                    <option value="none" class="form-group form-control">Select Education Type</option>
                    <option value="1" class="form-group form-control"> Graduation </option>
                    <option value="2" class="form-group form-control">Post Graduation </option>
                    <option value="3" class="form-group form-control"> Private Certification </option>
                    <option value="4" class="form-group form-control">Post PG </option>

                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
