@model IEnumerable<TermsAndConditionForCompany>
<h1>Terms & Condition For Company List</h1>
<a asp-action="Create" class="btn btn-success">Create New</a>
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Terms And Condition Rule ID</td>
                <td>Company Rule</td>
                <td>Added Date</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var temp in Model)
            {
                <tr>
                    <td>@temp.TermsAndConditionRuleID</td>
                    <td>@temp.CompanyRule</td>
                    <td>@temp.AddedDate</td>
                    <td>
                        <a asp-action="Edit" asp-controller="TermsAndConditionForCompany"  class="btn btn-success" asp-route-id="@temp.TermsAndConditionRuleID">Edit</a>
                        <a asp-action="Delete" asp-controller="TermsAndConditionForCompany"  class="btn btn-danger" asp-route-id="@temp.TermsAndConditionRuleID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </tabl>
</div>