@model IEnumerable<State>
<h2>State Details</h2>
<a asp-action="Create" class="btn btn-success"> Create New </a>
<div>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <td>State ID</td>
                <td>State Name</td>
                <td>Country ID</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var temp in Model)
            {
                <tr>
                    <td>@temp.StateID</td>
                    <td>@temp.StateName</td>
                    <td>@temp.CountryID</td>
                    <td>
                        <a asp-action="Edit" asp-controller="State" class="btn btn-success" asp-route-id="@temp.StateID">Edit</a>
                        <a asp-action="Delete" asp-controller="State" class="btn btn-danger" asp-route-id="@temp.StateID">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>