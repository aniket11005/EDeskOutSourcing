@model IEnumerable<PaymentMode>
<h1>Payment Mode List</h1>
<a asp-action="Create" class="btn btn-success">Create New</a>
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Payment Mode ID</td>
                <td>Payment Mode</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var temp in Model)
            {
                <tr>
                    <td>@temp.PaymentModeID</td>
                    <td>@temp.PaymentModeName</td>
                    <td>
                        <a asp-action="Edit" asp-controller="PaymentMode" class="btn btn-success" asp-route-id="@temp.PaymentModeID">Edit</a>
                        <a asp-action="Delete" asp-controller="PaymentMode" class="btn btn-danger" asp-route-id="@temp.PaymentModeID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>