@model IEnumerable<Project>
@{
    Layout = "~/Areas/CompanyArea/Views/Shared/_Layout.cshtml";
}
<h1>Project List</h1>
<a asp-action="Create" asp-controller="Project" asp-area="CompanyArea"  class="btn btn-success">Create</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Sr No</td>
            <td>Project Name</td>
            <td>Project Description</td>
            <td>Project Status</td>
            <td>Project Payment Terms</td>
            <td>Project Terms and Conditions</td>
            <td>Budget</td>
            <td>Expected Completion Duration In Days</td>
        </tr>
    </thead>
    @{
        var SrNo = 1;
    }
    <tbody>
        @foreach(var temp in Model)
        {
            <tr>
                <td>@SrNo</td>
                <td>@temp.ProjectName</td>
                <td>@temp.ProjectDescription</td>
                <td>@temp.ProjectStatus</td>
                <td>@temp.ProjectPaymentTerms</td>
                <td>@temp.ProjectTermsAndConditions</td>
                <td>@temp.Budget</td>
                <td>@temp.ExpectedCompletionDurationDays</td>
                <td>
                    <a asp-action="Edit" asp-controller="Project" asp-area="CompanyArea" asp-route-id="@temp.ProjectID"class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-controller="Project" asp-area="CompanyArea" asp-route-id="@temp.ProjectID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            SrNo++;
        }
    </tbody>
</table>