@model ChangePasswordVM
@{
    Layout = "~/Areas/CompanyArea/Views/Shared/_Layout.cshtml"; 
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="~/docs/css/main.css">
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Company Change Password </title>
</head>
<body>
    <form class="login-form" asp-action="ChangePassword" asp-controller="CompanyHome" asp-area="CompanyArea" method="post">
        <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Change Password</h3>
        <div class="form-group">
            <label class="control-label">Old Password</label><br />
            <input asp-for="OldPassword" type="password" placeholder="Old Password" autofocus>
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">New Password</label><br />
            <input asp-for="NewPassword"  type="password" placeholder="Password" >
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Confirm Password</label><br />
            <input asp-for="ConfirmPassword"  type="password" placeholder="Password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group btn-container">
            <button type="submit" class="btn btn-primary "><i class="fa fa-sign-in fa-lg fa-fw"></i>Save</button>
        </div>
    </form>
 
    <!-- Essential javascripts for application to work-->
    <script src="~/docs/js/jquery-3.3.1.min.js"></script>
    <script src="~/docs/js/popper.min.js"></script>
    <script src="~/docs/js/bootstrap.min.js"></script>
    <script src="~/docs/js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="~/docs/js/plugins/pace.min.js"></script>
    <script type="text/javascript">
        // Login Page Flipbox control
        $('.login-content [data-toggle="flip"]').click(function () {
            $('.login-box').toggleClass('flipped');
            return false;
        });
    </script>
</body>
</html>