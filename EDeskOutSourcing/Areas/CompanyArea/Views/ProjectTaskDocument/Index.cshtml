@model IEnumerable<ProjectTaskDocument>
@*@{
    Layout = null;
}*@
<h1>Project Task Document </h1>
<a asp-action="Create" asp-controller="ProjectTaskDocument" asp-area="CompanyArea" class="btn btn-success">Create</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sr No</th>
            <td>Task Title</td>
            <td>Task Document </td>
        </tr>
    </thead>
    @{
        var SrNo = 1;
    }
    <tbody>
        @foreach (var temp in Model)
        {
                <tr>
                    <th>@SrNo</th>
                    <td>@temp.ProjectTask.TaskTitle</td>
                    <td>
                    <img src="@Href(temp.ProjectDocumentFilePath)" width="100" height="100" />
                    </td>
                    <td>
                    <a asp-action="Edit" asp-controller="ProjectTaskDocument" asp-area="CompanyArea" asp-route-id="@temp.ProjectTaskDocumentID" asp-route-data="@temp.ProjectTaskID" class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-controller="ProjectTaskDocument" asp-area="CompanyArea" asp-route-id="@temp.ProjectTaskDocumentID" class="btn btn-success">Delete</a>
                    </td>
                </tr>
                SrNo++;
        }
    </tbody>
</table>