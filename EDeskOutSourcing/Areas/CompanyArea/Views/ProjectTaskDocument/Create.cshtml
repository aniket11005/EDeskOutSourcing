@model EDeskOutSourcing.Models.ProjectTaskDocument

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/CompanyArea/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ProjectTaskDocument</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="ProjectTaskID" class="control-label"></label>
                <select asp-for="ProjectTaskID" asp-items="@ViewBag.TID" class="form-control">
                    <option>Select Task</option>
                </select>
                <span asp-validation-for="ProjectTaskID" class="text-danger"></span>
            </div>
            <div class="form-group">
.                <label asp-for="ProjectDocumentFilePath" class="control-label"></label>
                <input type="file" asp-for="PhotoFile" class="form-control" />
                <span asp-validation-for="ProjectDocumentFilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

