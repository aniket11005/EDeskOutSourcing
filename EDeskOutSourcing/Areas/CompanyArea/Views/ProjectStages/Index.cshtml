@model IEnumerable<ProjectVM>
@{
    Layout = "~/Areas/CompanyArea/Views/Shared/_Layout.cshtml";
}
<h1> Project Stages Details</h1>
<a asp-action="Create" asp-controller="ProjectStages" asp-area="CompanyArea" class="btn btn-success">Create</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Sr No</td>
            <td>Project Name</td>
            <td>No Of Stages</td>
        </tr>
    </thead>
    @{
        var SrNo=1;
    }
    <tbody>
        @foreach (var temp in Model)
        {
            <tr>
                <td>@SrNo</td>
                <td>@temp.ProjectName</td>
                <td>@temp.NoOfStages</td>
                <td>
                    <a asp-action="Edit" asp-controller="ProjectStages" asp-area="CompanyArea" asp-route-id="@temp.ProjectID"  class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-controller="ProjectStages" asp-area="CompanyArea" asp-route-id="@temp.ProjectID"  class="btn btn-danger">Delete</a>
                </td>
            </tr>
            SrNo++;
        }
    </tbody>
</table>