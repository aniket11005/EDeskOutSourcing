@model SignInVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="~/docs/css/main.css">
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Admin SignIn</title>
</head>
<body>
    <section class="material-half-bg">
        <div class="cover"></div>
    </section>
    <section class="login-content">
        <div class="logo">
            <h1>Admin</h1>
           @* <h2>@ViewBag.Message</h2>*@
        </div>
        <div class="login-box">
            
            <form class="login-form" asp-action="SignIn" asp-controller="ManageAdmin" asp-area="" method="post">
                <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>SIGN IN</h3>
                <div class="form-group">
                    <label class="control-label">Email Adress</label>
                    <input asp-for="EmailID" name="EmailID" id="EmailID" class="form-control" type="text" placeholder="Email" autofocus>
                    <span  asp-validation-for="EmailID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input asp-for="Password" name="Password" id="Password" class="form-control" type="password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="utility">
                        <div class="animated-checkbox">
                            <label>
                                <input type="checkbox"><span class="label-text">Stay Signed in</span>
                            </label>
                        </div>
                        </div>
                </div>
                <div class="form-group btn-container">
                    <button class="btn btn-primary btn-block"><i class="fa fa-sign-in fa-lg fa-fw"></i>SIGN IN</button>
                    </div>
                    
            </form>
            
        </div>
    </section>
    <!-- Essential javascripts for application to work-->
    <script src="~/docs/js/jquery-3.3.1.min.js"></script>
    <script src="~/docs/js/popper.min.js"></script>
    <script src="~/docs/js/bootstrap.min.js"></script>
    <script src="~/docs/js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="~/docs/js/plugins/pace.min.js"></script>
    <script type="text/javascript">
        // Login Page Flipbox control
        $('.login-content [data-toggle="flip"]').click(function () {
            $('.login-box').toggleClass('flipped');
            return false;
        });
    </script>
</body>
</html>